<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
        >

    <LinearLayout
            android:id="@+id/mainTopLayout"
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:gravity="bottom"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/MainHeader"
                android:id="@+id/lblGastosHeader"
                android:textColor="@android:color/background_light"
                android:textColorHighlight="@android:color/holo_orange_light"
                android:textSize="@dimen/Header"
                android:textStyle="bold"
                />

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="bottom"
                android:id="@+id/mainHeaderTotalLayout">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="R$9999,99"
                    android:id="@+id/lblValorTotalHeader"
                    android:layout_gravity="center_vertical|right"
                    android:clickable="true"
                    android:gravity="right"
                    android:textSize="22dp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/lblMainHeaderDataAtual"
                    android:id="@+id/textView"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="right"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="-48dp"
            android:id="@+id/mainMiddleLayout">

        <ListView
                android:id="@android:id/list"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:text="a list view" />
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/mainBottomLayout"
            android:gravity="center_vertical"
            android:visibility="visible"
            android:padding="4dp">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+Conta"
                android:id="@+id/btnNovaConta"
                android:textSize="16dp"
                android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>

